<div id={@id} class="phx-modal seat-offering-modal blurred" phx-target={"##{@id}"}>
  <div class="phx-modal-content seat-offering-modal-content">
    <.form
      for={%{}}
      let={f}
      id="seat-offering-form"
      phx-target="#game"
      phx-submit="accept_seat_offering"
    >
      <div class="text-4xl">
        <h2>Have a seat! ğŸª‘</h2>
      </div>

      <div class="text-xl pt-8">
        <%= label f, :player_name, "Your name:" %>
      </div>

      <div class="pt-4">
        <%= text_input f, :player_name, required: true, minlength: 1, maxlength: 70, autofocus: true, autocomplete: "off", "data-1p-ignore": true, "data-lpignore": true,  class: "p-2 mx-3 border border-gray-600 rounded w-72" %>
        <%= error_tag f, :player_name %>
      </div>

      <div class="pt-8">
        <%= submit "Sit", class: "sit-button", phx_disable_with: "Sitting..." %>
      </div>
    </.form>
  </div>
</div>
